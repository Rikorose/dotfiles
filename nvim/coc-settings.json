{
  "coc.source.word.priority": 0,
  "coc.source.word.filetypes": ["latex"],
  "languageserver": {  
    "ccls": {
      "command": "ccls",
      "args": ["-v=3", "-log-file=/tmp/ccls.log"],
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "trace.server": "verbose",
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"]
    }
  }
}
