#!/usr/bin/env python3

import json
import os
import sys


def isfloat(value):
    try:
        float(value)
        return True
    except ValueError:
        return False


def isint(value):
    try:
        int(value)
        return True
    except ValueError:
        return False


if __name__ == "__main__":
    try:
        file = sys.argv[1]
        key = sys.argv[2]
        new_val = sys.argv[3]
    except IndexError:
        exit("Usage: json_update_value <file> <key> <new_value>")
    if not os.path.isfile(file):
        exit(f"{file} not found.")
    content = json.load(open(file))
    if isint(new_val):
        new_val = int(new_val)
    elif isfloat(new_val):
        new_val = float(new_val)
    content[key] = new_val
    json.dump(content, open(file, "w"), sort_keys=True, indent=4)
